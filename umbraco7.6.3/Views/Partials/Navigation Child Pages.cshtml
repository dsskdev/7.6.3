@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{ var selection = CurrentPage.Children.Where("Visible"); }

@if (selection.Any())
{
    <nav class="navbar navbar-default">
        <ul class="nav">
            @foreach (var item in selection)
            {
                <li>
                    <a href="@item.Url">@item.Name</a>
                </li>
            }
        </ul>
    </nav>
}