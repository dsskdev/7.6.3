@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "Master.cshtml";
}
@{Html.RenderPartial("breadcrumb"); }
<div class="row">
    <div class="col-lg-12">
       <h1 class="page-header">
            @Umbraco.Field("pageTitle")
       </h1>
    </div>
    @{
        var eventItems = Umbraco.TypedContentAtXPath("/root/home/branch/event");
        foreach (var eventItem in eventItems)
        {           
           <div class="row">
               <div class="col-md-7">
                  @{
                    var eventImg = Umbraco.TypedMedia(eventItem.GetPropertyValue<int>("eventImage"));
                    if (eventImg != null)
                    {
                        <a href="@eventItem.Url">
                            <img class="img-responsive" src="@eventImg.Url" />
                        </a>
                    }
                   }
               </div>
               <div class="col-md-5">
                  <h2>@eventItem.GetPropertyValue("eventName")</h2>
                  <h3>@eventItem.GetPropertyValue("eventLocation")</h3>
                   @(Umbraco.Truncate(eventItem.GetPropertyValue("eventDescription").ToString(), 200, true))
                   <a href="@eventItem.Url" class="btn btn-default">Learn More</a>
               </div>
           </div>
           <hr />
        }
    }
</div>